Функция НайтиЧислоВКонце(Стр)
	Числа = "1234567890";
	Конец = СтрДлина(Стр);
	Ит = Конец;
	ЕстьЧисло = Истина;
	Кол = 0;
	Пока ЕстьЧисло цикл
		сим = Сред(Стр,Ит,1);
		Если Найти(Числа,Сим) = 0 Тогда
			ЕстьЧисло = Ложь;
			Прервать;
		КонецЕсли; 
		Ит = Ит -1;
		Кол = Кол+1;
	КонецЦикла;
	Если Ит = Конец тогда
		чис = "0";
	Иначе
		чис = Прав(Стр,Кол);
	КонецЕсли;
	Возврат чис;
КонецФункции // НайтиЧислоВКонце()

