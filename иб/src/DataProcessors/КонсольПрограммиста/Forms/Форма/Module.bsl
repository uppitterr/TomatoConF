			|//Запись.ОткрытьФайл(Путь,""Windows-1251"");
			|//Запись.ЗаписатьОбъявлениеXML();
			|//Фабрика.ЗаписатьXML(Запись,"+свойства.Имя+","""+свойства.Имя+""");"
			
		КонецЦикла;
	КонецЦикла;
