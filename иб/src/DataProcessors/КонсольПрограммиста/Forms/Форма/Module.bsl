// Получает дерево метаданных конфигурации с заданным отбором по объектам метаданных.
//
// Параметры:
// Отбор – Структура – содержит значения элементов отбора.
//						Если параметр задан, то будет получено дерево метаданных в соответствии с заданным отбором. 
//						Ключ (Строка) – имя свойства элемента метаданных;
//						Значение (Массив) – множество значений для отбора.
//
// Пример инициализации переменной "Отбор":
//
// Массив = Новый Массив;
// Массив.Добавить("Константа.ИспользоватьСинхронизациюДанных");
// Массив.Добавить("Справочник.Валюты");
// Массив.Добавить("Справочник.Организации");
// Отбор = Новый Структура;
// Отбор.Вставить("ПолноеИмя", Массив);
// 
//  Возвращаемое значение:
//  Тип: ДеревоЗначений - дерево описания метаданных конфигурации
//
&НаСервере
Функция ПолучитьДеревоМетаданныхКонфигурации(Отбор = Неопределено) Экспорт
	
	ИспользоватьОтбор = (Отбор <> Неопределено);
	
	КоллекцииОбъектовМетаданных = Новый ТаблицаЗначений;
	КоллекцииОбъектовМетаданных.Колонки.Добавить("Имя");
	КоллекцииОбъектовМетаданных.Колонки.Добавить("Синоним");
	КоллекцииОбъектовМетаданных.Колонки.Добавить("Картинка");
	КоллекцииОбъектовМетаданных.Колонки.Добавить("КартинкаОбъекта");
	КоллекцииОбъектовМетаданных.Колонки.Добавить("ЕстьРеквизиты");
	КоллекцииОбъектовМетаданных.Колонки.Добавить("ЕстьТЧ");
	
	НоваяСтрокаКоллекцииОбъектовМетаданных("Константы",               "Константы",                 Ложь,	Ложь,	БиблиотекаКартинок.Константа,              БиблиотекаКартинок.Константа,                    КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("Справочники",             "Справочники",               Истина,	Истина,	БиблиотекаКартинок.Справочник,             БиблиотекаКартинок.Справочник,                   КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("Документы",               "Документы",                 Истина,	Истина,	БиблиотекаКартинок.Документ,               БиблиотекаКартинок.ДокументОбъект,               КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("ПланыВидовХарактеристик", "Планы видов характеристик", Истина,	Истина,	БиблиотекаКартинок.ПланВидовХарактеристик, БиблиотекаКартинок.ПланВидовХарактеристикОбъект, КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("ПланыСчетов",             "Планы счетов",              Истина,	Истина,	БиблиотекаКартинок.ПланСчетов,             БиблиотекаКартинок.ПланСчетовОбъект,             КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("ПланыВидовРасчета",       "Планы видов характеристик", Истина,	Истина,	БиблиотекаКартинок.ПланВидовХарактеристик, БиблиотекаКартинок.ПланВидовХарактеристикОбъект, КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("РегистрыСведений",        "Регистры сведений",         Истина,	Ложь,	БиблиотекаКартинок.РегистрСведений,        БиблиотекаКартинок.РегистрСведений,              КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("РегистрыНакопления",      "Регистры накопления",       Истина,	Ложь,	БиблиотекаКартинок.РегистрНакопления,      БиблиотекаКартинок.РегистрНакопления,            КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("РегистрыБухгалтерии",     "Регистры бухгалтерии",      Истина,	Ложь,	БиблиотекаКартинок.РегистрБухгалтерии,     БиблиотекаКартинок.РегистрБухгалтерии,           КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("РегистрыРасчета",         "Регистры расчета",          Истина,	Ложь,	БиблиотекаКартинок.РегистрРасчета,         БиблиотекаКартинок.РегистрРасчета,               КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("БизнесПроцессы",          "Бизнес-процессы",           Истина,	Ложь,	БиблиотекаКартинок.БизнесПроцесс,          БиблиотекаКартинок.БизнесПроцессОбъект,          КоллекцииОбъектовМетаданных);
	НоваяСтрокаКоллекцииОбъектовМетаданных("Задачи",                  "Задачи",                    Истина,	Ложь,	БиблиотекаКартинок.Задача,                 БиблиотекаКартинок.ЗадачаОбъект,                 КоллекцииОбъектовМетаданных);
	
	// возвращаемое значение функции
	//ДеревоМетаданных1 = Новый ДеревоЗначений;
	ДеревоМетаданных1 = ДеревоМетаданных .ПолучитьЭлементы();
	//ДеревоМетаданных1.Колонки.Добавить("Имя");
	//ДеревоМетаданных1.Колонки.Добавить("ПолноеИмя");
	//ДеревоМетаданных1.Колонки.Добавить("Синоним");
	//ДеревоМетаданных1.Колонки.Добавить("Картинка");
	
	Для Каждого СтрокаКоллекции Из КоллекцииОбъектовМетаданных Цикл
		
		//СтрокаДерева = ДеревоМетаданных1.Строки.Добавить();
		СтрокаДерева = ДеревоМетаданных1.Добавить();
		ЗаполнитьЗначенияСвойств(СтрокаДерева, СтрокаКоллекции);
		Для Каждого ОбъектМетаданных Из Метаданные[СтрокаКоллекции.Имя] Цикл
			
			Если ИспользоватьОтбор Тогда
				
				ОбъектПрошелФильтр = Истина;
				Для Каждого ЭлементОтбора Из Отбор Цикл
					
					Значение = ?(ВРег(ЭлементОтбора.Ключ) = ВРег("ПолноеИмя"), ОбъектМетаданных.ПолноеИмя(), ОбъектМетаданных[ЭлементОтбора.Ключ]);
					Если ЭлементОтбора.Значение.Найти(Значение) = Неопределено Тогда
						ОбъектПрошелФильтр = Ложь;
						Прервать;
					КонецЕсли;
					
				КонецЦикла;
				
				Если Не ОбъектПрошелФильтр Тогда
					Продолжить;
				КонецЕсли;
				
			КонецЕсли;
			
			//СтрокаДереваОМ = СтрокаДерева.Строки.Добавить();
			СтрокаДереваОМ = СтрокаДерева.ПолучитьЭлементы().Добавить();
			СтрокаДереваОМ.Имя       = ОбъектМетаданных.Имя;
			СтрокаДереваОМ.ПолноеИмя = ОбъектМетаданных.ПолноеИмя();
			СтрокаДереваОМ.Синоним   = ОбъектМетаданных.Синоним;
			СтрокаДереваОМ.Картинка  = СтрокаКоллекции.КартинкаОбъекта;
			//СтрокаДереваОМ.Тип	     = ОбъектМетаданных.Тип;
			Если ЛОЖЬ
				ИЛИ СтрокаКоллекции.Имя = "РегистрыСведений"
				ИЛИ СтрокаКоллекции.Имя = "РегистрыНакопления"
				ИЛИ СтрокаКоллекции.Имя = "РегистрыБухгалтерии"
				ИЛИ СтрокаКоллекции.Имя = "РегистрыРасчета"
			Тогда
				Для Каждого стр из ОбъектМетаданных.Измерения Цикл
					Нстр = СтрокаДереваОМ.ПолучитьЭлементы().Добавить();
					Нстр.Имя = стр.Имя;
					Нстр.ПолноеИмя = стр.ПолноеИмя();
					Нстр.Синоним   = стр.Синоним;
					Нстр.Тип = стр.Тип;
					Нстр.Картинка  = БиблиотекаКартинок.СформироватьОтчет;
				КонецЦикла; 
				Для Каждого стр из ОбъектМетаданных.Ресурсы Цикл
					Нстр = СтрокаДереваОМ.ПолучитьЭлементы().Добавить();
					Нстр.Имя = стр.Имя;
					Нстр.ПолноеИмя = стр.ПолноеИмя();
					Нстр.Синоним   = стр.Синоним;
					Нстр.Тип 	= стр.Тип;
					Нстр.Картинка  = БиблиотекаКартинок.СформироватьОтчет;
				КонецЦикла; 
			КонецЕсли; 
			Если СтрокаКоллекции.ЕстьРеквизиты Тогда
				Для Каждого стр из ОбъектМетаданных.СтандартныеРеквизиты Цикл
					Нстр = СтрокаДереваОМ.ПолучитьЭлементы().Добавить();
					Нстр.Имя = стр.Имя;
					//Нстр.ПолноеИмя = стр.ПолноеИмя();
					Нстр.Синоним   = стр.Синоним;
					Нстр.Тип = стр.Тип;
					Нстр.Картинка  = БиблиотекаКартинок.СформироватьОтчет;
				КонецЦикла;
				Для Каждого стр из ОбъектМетаданных.Реквизиты Цикл
					Нстр = СтрокаДереваОМ.ПолучитьЭлементы().Добавить();
					Нстр.Имя = стр.Имя;
					Нстр.ПолноеИмя = стр.ПолноеИмя();
					Нстр.Синоним   = стр.Синоним;
					Нстр.Картинка  = БиблиотекаКартинок.СформироватьОтчет;
					Нстр.Тип = стр.Тип;
				КонецЦикла;
				Если СтрокаКоллекции.ЕстьТЧ Тогда
					Для Каждого стр из ОбъектМетаданных.ТабличныеЧасти Цикл
						Нстр = СтрокаДереваОМ.ПолучитьЭлементы().Добавить();
						Нстр.Имя = стр.Имя;
						Нстр.ПолноеИмя = стр.ПолноеИмя();
						Нстр.Синоним   = стр.Синоним;
						Нстр.Картинка  = БиблиотекаКартинок.Вперед;
						//Нстр.Тип = стр.Тип;
						Для Каждого РеквтТЧ из стр.Реквизиты Цикл
							РТ = Нстр.ПолучитьЭлементы().Добавить();
							РТ.Имя = РеквтТЧ.Имя;
							РТ.ПолноеИмя = РеквтТЧ.ПолноеИмя();
							РТ.Синоним   = РеквтТЧ.Синоним;
							РТ.Картинка  = БиблиотекаКартинок.Вперед;
							РТ.Тип = РеквтТЧ.Тип;
						КонецЦикла; 
					КонецЦикла;
				КонецЕсли; 
			КонецЕсли; 
		КонецЦикла;
		
	КонецЦикла;
	
	// удаляем строки без подчиненных элементов
	Если ИспользоватьОтбор Тогда
		
		// используем обратный порядок обхода дерева значений
		//КолвоЭлементовКоллекции = ДеревоМетаданных1.Строки.Количество();
		КолвоЭлементовКоллекции = ДеревоМетаданных1.ПолучитьЭлементы().Количество();
		
		Для ОбратныйИндекс = 1 По КолвоЭлементовКоллекции Цикл
			
			ТекущийИндекс = КолвоЭлементовКоллекции - ОбратныйИндекс;
			//СтрокаДерева = ДеревоМетаданных1.Строки[ТекущийИндекс];
			СтрокаДерева = ДеревоМетаданных1.ПолучитьЭлементы()[ТекущийИндекс];
			//Если СтрокаДерева.Строки.Количество() = 0 Тогда
			//	ДеревоМетаданных1.Строки.Удалить(ТекущийИндекс);
			//КонецЕсли;
			Если СтрокаДерева.ПолучитьЭлементы().Количество() = 0 Тогда
				ДеревоМетаданных1.ПолучитьЭлементы().Удалить(ТекущийИндекс);
			КонецЕсли;

		КонецЦикла;
	
	КонецЕсли;
	
	//Возврат ДеревоМетаданных1;
	
КонецФункции

Процедура НоваяСтрокаКоллекцииОбъектовМетаданных(Имя, Синоним,ЕстьРеквизиты,ЕстьТЧ, Картинка, КартинкаОбъекта, Таб)
	
