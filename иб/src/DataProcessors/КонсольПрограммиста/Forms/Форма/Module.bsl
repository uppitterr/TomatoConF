&НаСервере
Функция ВТД(ТЗ,Добавить = Ложь,Заголовок = Неопределено,СразуВРезультат = Истина)
	ТД = новый ТабличныйДокумент;
	ТД.Вывод = ИспользованиеВывода.Разрешить;
	ЦветШапка = новый Цвет(200,200,200);
	ЦветЗаголовка = новый Цвет(255,200,150);
	НачальнаяСтрока = 1;
	НачальнаяКолонка = 1;
	ДвойнаяЛиния = Новый Линия(ТипЛинииЯчейкиТабличногоДокумента.Двойная);
	Линия = Новый Линия(ТипЛинииЯчейкиТабличногоДокумента.Сплошная);
	с = НачальнаяСтрока; //Строка
	к = НачальнаяКолонка; //Колонка
	Если НЕ Заголовок = Неопределено Тогда
		Обл = ТД.Область(с,к);
		Обл.ЦветФона = ЦветЗаголовка;
		ШрифтЗаголовка = Новый Шрифт(Обл.Шрифт,,,Истина);
		Обл.Шрифт = ШрифтЗаголовка;
		Обл.ГраницаСверху = ДвойнаяЛиния;
		Обл.ГраницаСнизу = ДвойнаяЛиния;
		Обл.ГраницаСлева = ДвойнаяЛиния;
		Обл.ГраницаСправа = ДвойнаяЛиния;		
		ЗначениеВОбласть(Обл,Заголовок);
		с = с + 1;
	КонецЕсли;
	///// Запрос //////////////////////////////////////////////////////////	
	Если ТипЗнч(ТЗ) = Тип("РезультатЗапроса") Тогда		
		Колонки = ТЗ.Колонки;
		СформироватьШапку(ТД,с,к,Колонки);
		Если НЕ ТЗ.Пустой() Тогда
			с = с+1; 
			Выборка = ТЗ.Выбрать();
			Пока Выборка.Следующий() Цикл
				к = НачальнаяКолонка;
				Для Каждого Кол из Колонки Цикл
					ЗначениеВОбласть(ТД.Область(с,к),Выборка[Кол.Имя]);
					к = к+1;
				КонецЦикла; 
				с = с+1;    
			КонецЦикла;
		КонецЕсли;
	///// ТаблицаЗначений //////////////////////////////////////////////////////////
	ИначеЕсли ТипЗнч(ТЗ) = Тип("ТаблицаЗначений") тогда		
		Колонки = ТЗ.Колонки;
		СформироватьШапку(ТД,с,к,Колонки);
		с = с+1;
		Для Каждого стр из ТЗ Цикл
			к = НачальнаяКолонка;
			Для Каждого Кол из Колонки Цикл
				ЗначениеВОбласть(ТД.Область(с,к),стр[Кол.Имя]);
				к = к+1;
			КонецЦикла; 
			с = с+1;
		КонецЦикла;  
		///// СписокЗначений //////////////////////////////////////////////////////////
	ИначеЕсли ТипЗнч(ТЗ) = Тип("СписокЗначений") Тогда		
		Для Каждого стр из ТЗ Цикл				
			ЗначениеВОбласть(ТД.Область(с,к)	,стр.Представление);
			ЗначениеВОбласть(ТД.Область(с,к+1),стр.Значение);
		КонецЦикла; 
		с = с+1;
		///// Массив //////////////////////////////////////////////////////////
	ИначеЕсли ТипЗнч(ТЗ) = Тип("Массив") Тогда				
		Для Каждого стр из ТЗ Цикл								
			Если ТипЗнч(стр) = Тип("Структура") Тогда
				Для Каждого эл из стр Цикл		
					ЗначениеВОбласть(ТД.Область(с,к),эл.Значение);
					к = к+1;   
				КонецЦикла;
				к = 1;
			Иначе	
				ЗначениеВОбласть(ТД.Область(с,к),стр);
			КонецЕсли; 
			с = с+1;			
		КонецЦикла; 
		///// Структура //////////////////////////////////////////////////////////
	ИначеЕсли ТипЗнч(ТЗ) = Тип("Структура") или ТипЗнч(ТЗ) = Тип("Соответствие") Тогда				
		Для Каждого стр из ТЗ Цикл										
			ЗначениеВОбласть(ТД.Область(с,к)	,стр.Ключ);
			ЗначениеВОбласть(ТД.Область(с,к+1),стр.Значение);
			с = с+1;
		КонецЦикла;
		///// ДеревоЗначений //////////////////////////////////////////////////////////
	ИначеЕсли ТипЗнч(ТЗ) = Тип("ДеревоЗначений") Тогда
		Результат = ТЗ.Строки;		
		Колонки = ТЗ.Колонки;
		СформироватьШапку(ТД,с,к,Колонки);
		ТД.НачатьАвтогруппировкуСтрок();
		ДеревоЗначенийВТД(ТД,Результат,0,Колонки);
		ТД.ЗакончитьАвтогруппировкуСтрок();
	Иначе
		ЗначениеВОбласть(ТД.Область(с,к),ТЗ);
	КонецЕсли; 
	//////////////////////////////////////////////////////////////////////////
	
	Если СразуВРезультат Тогда
		Если Добавить Тогда
			_Результат.Вывести(ТД);	
		Иначе 
			_Результат = ТД;
		КонецЕсли; 
	Иначе
		Возврат ТД;
	КонецЕсли;     	
КонецФункции //ВТД()

&НаСервере
Процедура СформироватьШапку(ТД,с,к,Колонки)
	ЦветШапки = Новый Цвет(200,200,200);
	Линия = Новый Линия(ТипЛинииЯчейкиТабличногоДокумента.Сплошная);
	Для Каждого стр из Колонки Цикл
		Обл = ТД.Область(с,к);
		ШрифтЗаголовка = Новый Шрифт(Обл.Шрифт,,,Истина);
		Обл.Шрифт = ШрифтЗаголовка;
		Обл.ГраницаСнизу = Линия;
		Обл.ГраницаСправа = Линия;
		Обл.Текст = стр.Имя;
		Обл.ЦветФона = ЦветШапки;
