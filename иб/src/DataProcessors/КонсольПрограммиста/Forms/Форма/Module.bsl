&НаСервереБезКонтекста
Функция ОпределитьТипВозвращаемогоЗначения(ТекущееСвойство)
			
			Если ЗначениеЗаполнено(ТекущееСвойство.ЗначениеПоумолчанию) Тогда
				Присвоить = Строка(ТекущееСвойство.ЗначениеПоумолчанию);
				Возврат Присвоить;
			КонецЕсли; 
			Тип = ТекущееСвойство.Тип.Имя;
			БазовыйТип = ТекущееСвойство.Тип.БазовыйТип.Имя;			
			Если Тип = "string" или БазовыйТип = "string" Тогда
				Присвоить = """""";
			ИначеЕсли Тип = "integer" или Тип = "long"
				или БазовыйТип = "integer" или БазовыйТип = "long" Тогда
				Присвоить = "0";
			ИначеЕсли Тип = "dateTime" или БазовыйТип = "dateTime"
				 или Тип = "date" или БазовыйТип = "date" Тогда 
				Присвоить = "'00010101'";
			Иначе
				Присвоить = "Неопределено";
			КонецЕсли;
		Возврат Присвоить;
КонецФункции // ОпределитьТипВозвращаемогоЗначения()

&НаСервере
Процедура Разыменовать(Строка,Фабрика,Владелец,ВладелецИмя,ТекущееСвойство,ТолькоОбязательныеПоля,Знач Отступ = "",Знач Владельцы = Неопределено,Знач Путь = "")	
	
	

	Если НЕ Типзнч(ТекущееСвойство) = Тип("Строка") И
		ТипЗнч(ТекущееСвойство.Тип) = тип("ТипЗначенияXDTO") Тогда		
		св = "";
		Если  ЗначениеЗаполнено(ТекущееСвойство.Тип.Фасеты) Тогда			
			Для Каждого Фасет из ТекущееСвойство.Тип.Фасеты Цикл
				Если Фасет.Вид = ВидФасетаXDTO.Перечисление Тогда
					св = св +Фасет.Значение+"; ";
				Иначе
					св = св +Фасет.Вид +" = "+ Фасет.Значение+"; ";	
				КонецЕсли; 
				
			КонецЦикла;
		КонецЕсли;
		
		Присваиваем = ОпределитьТипВозвращаемогоЗначения(ТекущееСвойство);
		
		Если ТекущееСвойство.ВерхняяГраница = 1 Тогда			 
			Строка = Строка +Отступ+ ВладелецИмя+"."+ТекущееСвойство.Имя + " = "+Присваиваем+"; //"+ТекущееСвойство.Тип.Имя +" "+св+Символы.ПС;
		Иначе
			Кол = " Количество: "+?(ТекущееСвойство.ВерхняяГраница = -1,"Бесконечно",ТекущееСвойство.ВерхняяГраница)+"; ";
			Строка = Строка +Отступ+ ВладелецИмя+"."+ТекущееСвойство.Имя + ".Добавить("+Присваиваем+"); //"+ТекущееСвойство.Тип.Имя +Кол+св+Символы.ПС;
		КонецЕсли; 
		
		   
